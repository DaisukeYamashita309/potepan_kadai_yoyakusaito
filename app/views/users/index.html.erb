<h2>プロフィール</h2>
<p>アイコン画像</p>
 <%= link_to "ログアウト", destroy_user_session_path, method: :delete %><br>
 
 <%= link_to "アカウント", users_account_path(current_user), class: "menu" %>
 <%= link_to "プロフィール", users_index_path, class: "menu" %>
 

 <table>
  <tbody>
   <%= form_for @user, url: users_index_path, methods: :patch do |f| %>
   <tr>
     <% if @user.image != nil %>
     <%= image_tag attachment_url(@user, :image, :fill, 60, 60),class: "user-icon" %>
     <% else %>
     <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg",class: "user-icon2" %>
     <% end %>
   </tr>
<tr>
    <th><%= f.label :image , "画像" %></th>
    <td><%= f.attachment_field :image %></td>
</tr>
<tr>
    <th><%= f.label :name ,"名前" %></th>
    <td><%= f.text_field :name%></td>
    <!--%= @user.id %>-->
</tr>
<tr>
    <th><%= f.label :introduction ,"自己紹介" %></th>
    <td><%= f.text_area :introduction ,placeholder:"自己紹介を入力"%></td>
</tr>
   </tbody>
  </table>
  
  <ul>
      <li><%= f.submit "更新"%></li>
    <% end %>
    
 