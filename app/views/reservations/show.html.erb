    <table>
     <tr>
        <th>予約した部屋</th>
        <th><%= @room.room_name %></th>
     </tr>
     
     <tr>
        <th>開始日</th>
        <th><%= @reservation.begin_day.strftime("%Y年 %m月 %d日") %></th>
     </tr>
     
     <tr>
        <th>終了日</th>
        <th><%= @reservation.finish_day.strftime("%Y年 %m月 %d日") %></th>
     </tr>
     
     <tr>
        <th>価格</th>
        <th><%= ((@reservation.finish_day - @reservation.begin_day + 1).to_i) * @room.total_prices %></th>
     </tr>
     
     </table>
     
