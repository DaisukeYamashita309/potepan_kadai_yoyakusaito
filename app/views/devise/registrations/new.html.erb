<h2>新しいアカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: users_profile_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p>必須</p>
    <%= f.text_field :name, autofocus: true, placeholder:"ユーザー名" %>
  </div>

  <div class="field">
    <p>必須</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <p>必須</p>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"パスワード"%>
  </div>

  <div class="field">
    <p>必須</p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"パスワード確認"%>
  </div>

  <div class="actions">
    <ul>
    <li><%= f.submit "新しいアカウントを作成"%></li>
    <!--<li><%= link_to "すでにアカウントをお持ちの方はログイン", new_user_registration_path %></li>-->
    </ul>
  </div>
 <% end %>

<%- if controller_name != 'sessions' %>
  <%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name) %><br />
<% end %>