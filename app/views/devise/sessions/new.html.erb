<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <p>必須</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"メールアドレス"%>
  </div>

  <div class="field">
     <p>必須</p>
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"パスワード" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新しいアカウントを作成", new_registration_path(resource_name) %><br />
<% end %>
